<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp">

        <FrameLayout
            android:id="@+id/fl_top"
            android:layout_width="135dp"
            android:layout_height="165dp">

            <ImageView
                android:id="@+id/productImage"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:contentDescription="@string/app_name" />

            <ImageView
                android:id="@+id/outStockImage"
                android:layout_width="135dp"
                android:layout_height="60dp"
                android:layout_gravity="center|bottom"
                android:background="@color/rose"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside"
                android:src="@drawable/coming_soon_logo"
                android:visibility="gone" />

        </FrameLayout>

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="2"
            android:text=""
            android:textColor="@color/oil" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/txtDiscountPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:padding="2dp"
                android:text=""
                android:textColor="@color/oil" />

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp"
                android:text=""
                android:textColor="@color/oil" />

            <TextView
                android:id="@+id/txtDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/bg_ratting"
                android:gravity="center"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/colorWhite"
                android:visibility="visible" />
        </TableRow>

        <ImageView
            android:id="@+id/imgWishList"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/app_name"
            android:padding="5dp"
            android:src="@drawable/ico_wishlist_normal_svg"
            android:visibility="gone" />

    </LinearLayout>
</android.support.v7.widget.CardView>